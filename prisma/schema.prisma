// ---------- datasource ----------
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// ---------- generator ----------
generator client {
  provider = "prisma-client-js"
}

// ---------- models ----------
model Changelog {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  content   String
  tags      String[] @default([])
  coverUrl  String?
  images    String[] @default([])
  published Boolean  @default(true)
  createdAt DateTime @default(now())
}

model Feedback {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String?
  message   String
  page      String?
  emoji     String?
  createdAt DateTime @default(now())
}
