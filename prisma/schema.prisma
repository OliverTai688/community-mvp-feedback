datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Changelog {
  id        String   @id @default(cuid())
  title     String
  content   String   // Markdown 或純文字
  tags      String[] @default([])
  coverUrl  String?             // 單張封面
  images    String[] @default([]) // 多張圖片 URL
  published Boolean  @default(true)
  createdAt DateTime @default(now())
}

model Feedback {
  id        String   @id @default(cuid())
  email     String?
  message   String
  page      String?
  emoji     String?
  createdAt DateTime @default(now())
}
